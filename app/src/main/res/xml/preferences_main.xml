<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.UpdatesPrefFragment"
        app:icon="@drawable/ic_menu_update"
        app:layout="@layout/item_preference"
        app:title="@string/update" />

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.DownloaderFragment"
        app:icon="@drawable/ic_menu_download"
        app:layout="@layout/item_preference"
        app:title="@string/download" />

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.InstallationFragment"
        app:icon="@drawable/ic_installation"
        app:layout="@layout/item_preference"
        app:title="@string/install" />

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.BackupFragment"
        app:icon="@drawable/ic_backup"
        app:layout="@layout/item_preference"
        app:title="@string/backup" />

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.LanguageFragment"
        app:icon="@drawable/ic_language"
        app:layout="@layout/item_preference"
        app:title="@string/language" />

    <Preference
        android:fragment="net.xzos.upgradeall.ui.fragment.setting.preference.UISettingFragment"
        app:icon="@drawable/ic_search_cloud"
        app:layout="@layout/item_preference"
        app:title="@string/ui" />

</androidx.preference.PreferenceScreen>
